<Application x:Class="XMinecraftSuite.Wpf.App"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:XMinecraftSuite.Wpf.Converters"
      xmlns:wpf="clr-namespace:XMinecraftSuite.Wpf"
      StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:UniversalTypeConverter x:Key="UniversalTypeConverter" />
            <converters:SelectableItemColorConverter x:Key="SelectableItemColorConverter" />
            <!-- 保证图片不是null -->
            <converters:ImageOrAlternativeConverter x:Key="ImageOrAlternativeConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Fonts.xaml" />
                <ResourceDictionary Source="/Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Resources/Images.xaml" />

                <ResourceDictionary Source="/Resources/Control.Border.xaml" />
                <ResourceDictionary Source="/Resources/Control.ScrollViewer.xaml" />
                <ResourceDictionary Source="/Resources/Control.Grid.xaml" />
                <ResourceDictionary Source="/Resources/Control.ItemsControl.xaml" />
                <wpf:Constants />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>